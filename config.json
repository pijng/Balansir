{
    "server_list": [
        {"endpoint": "127.0.0.1:443", "weight": 0.5},
        {"endpoint": "127.0.0.2:443", "weight": 0.5}
    ],
    "connection_protocol": "https",
    "autocert": true,
    "autocert_dir": "./certs",
    "white_hosts": "example.com",
    "ssl_certificate": "./server.crt",
    "ssl_private_key": "./server.key",
    "http_port": 80,
    "https_port": 443,
    "server_check_timer": 2,
    "server_check_response_timeout": 5,
    "session_persistence": false,
    "session_max_age": 300,
    "proxy_mode": "transparent",
    "balancing_algorithm": "weighted-round-robin"
}